  		function CategoryCtrl($scope, $http){
            $scope.selectedCategory = "";
            $scope.categories = [];

            $http({
                method: "GET",
                url: "/category/index",
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            }).success(function(result){
                $scope.categories = result;
            });
        }	
  	</script>
